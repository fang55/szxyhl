<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_data"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h150"
        android:layout_marginTop="@dimen/h20"
        android:background="@color/color_white"
        android:paddingLeft="@dimen/w30" >

        <TextView
            android:id="@+id/tv_set_data"
            style="@style/text_sixthree"
            android:layout_centerVertical="true"
            android:text="头像" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="@dimen/w100"
                android:layout_height="@dimen/h100"
                android:background="@mipmap/iv_photo" />

            <ImageView
                style="@style/my_next"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/w20"
                android:layout_marginRight="@dimen/w30"
                 />
        </LinearLayout>
        <View
           style="@style/view_line"
            android:layout_alignParentBottom="true"></View>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_set_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h90"
        android:layout_marginTop="@dimen/h20"
        android:background="@color/color_white"
        android:paddingLeft="@dimen/w30" >

        <TextView
            style="@style/text_sixthree"
            android:layout_centerVertical="true"
            android:text="昵称" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_pepleName"
                android:layout_gravity="center"
                style="@style/text_thirty" />

            <ImageView
                style="@style/my_next"
                android:layout_marginLeft="@dimen/w20"
                android:layout_marginRight="@dimen/w30"
                 />
        </LinearLayout>
        <View
            style="@style/view_line"
            android:layout_alignParentBottom="true"></View>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_set_sex"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h90"
        android:layout_marginTop="@dimen/h20"
        android:background="@color/color_white"
        android:paddingLeft="@dimen/w30" >

        <TextView
            style="@style/text_sixthree"
            android:layout_centerVertical="true"
            android:text="性别" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/w30"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sex"
                style="@style/text_sixthree"
                 />

            <ImageView
                style="@style/my_next"
                android:layout_marginLeft="@dimen/w20"
                android:layout_gravity="center"
                />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
