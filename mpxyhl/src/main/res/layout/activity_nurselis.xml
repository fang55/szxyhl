<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<include
    layout="@layout/include_login"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h70"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/color_white"
        >
        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/w60"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv2"
                style="@style/nurselist_text"
                android:text="年龄"/>
            <ImageView
                android:layout_width="@dimen/w16"
                android:layout_height="@dimen/h10"
                android:layout_marginLeft="15dp"
                android:background="@mipmap/xiala"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/h24"
            android:layout_marginLeft="@dimen/w60"
            android:alpha="0.5"
            android:background="@color/color_view_three"
            />
        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/w60"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv3"
                style="@style/nurselist_text"
                android:text="籍贯"/>
            <ImageView
                android:layout_width="@dimen/w16"
                android:layout_height="@dimen/h10"
                android:layout_marginLeft="15dp"
                android:background="@mipmap/xiala"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/h24"
            android:alpha="0.5"
            android:layout_marginLeft="@dimen/w60"
            android:background="@color/color_view_three"/>
        <LinearLayout
            android:id="@+id/ll4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w60"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv4"
                style="@style/nurselist_text"
                android:text="排序"/>
            <ImageView
                android:layout_width="@dimen/w16"
                android:layout_height="@dimen/h10"
                android:layout_marginLeft="15dp"
                android:background="@mipmap/xiala"/>
        </LinearLayout>
    </LinearLayout>
    <!--<GridView
        android:id="@+id/gv_nurse"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="1"
        android:verticalSpacing="10dp"
        android:descendantFocusability="blocksDescendants"
        android:listSelector="@android:color/transparent"
        ></GridView>-->
    <com.handmark.pulltorefresh.library.PullToRefreshGridView
        android:id="@+id/gv_nurse"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="1"
        android:verticalSpacing="10dp"
        android:listSelector="@android:color/transparent"
        >

    </com.handmark.pulltorefresh.library.PullToRefreshGridView>
</LinearLayout>
