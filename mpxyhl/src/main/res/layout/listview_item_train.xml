<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <TextView 
        android:id="@+id/tv_train_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/thirty"
         android:textColor="@color/color_six_three"
        />
     <TextView
        android:id="@+id/tv_train_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:textColor="@color/color_six_three"
         android:layout_marginTop="@dimen/h10"
         android:textSize="@dimen/thirty"
        />
     <View
         android:layout_width="wrap_content"
         android:layout_height="1dp"
         android:background="@color/color_view"
         android:layout_marginTop="@dimen/h30"
         android:layout_marginBottom="30dp"></View>
</LinearLayout>
