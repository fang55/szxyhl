<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/w720"
    android:layout_height="@dimen/h433"
    android:background="@color/color_white"
    android:orientation="vertical" >
    
    <include 
        layout="@layout/dialog_top"/>
    
<RelativeLayout 
         android:layout_width="match_parent"
         android:layout_height="@dimen/h100"
         android:paddingLeft="@dimen/w30"
         android:layout_marginTop="@dimen/h40"
         >
         <EditText
             android:id="@+id/et_updname"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:hint="请输入昵称"
             android:textColor="@color/color_black"
             android:textSize="@dimen/thirty"
             android:layout_centerVertical="true"
             android:background="@null"/>
         <Button
             android:id="@+id/btn_cleak"
             android:layout_width="@dimen/w44"
             android:layout_height="@dimen/h44"
             android:background="@mipmap/iv_delect"
             android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:layout_marginRight="@dimen/w30"
             />
     </RelativeLayout>
</LinearLayout>
