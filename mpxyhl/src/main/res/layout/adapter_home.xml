<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/w250"
    android:layout_height="@dimen/h200"
    android:background="@color/color_white"
    android:gravity="center"
    android:paddingTop="@dimen/h40"
    android:orientation="vertical">
      <ImageView
          android:id="@+id/iv_mark"
          android:layout_width="@dimen/w80"
          android:layout_height="@dimen/h75"
          />
      <TextView
          android:id="@+id/tv_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/twenty_four"
          android:layout_marginTop="@dimen/h20"
          android:textColor="@color/color_view_line"
          android:layout_below="@id/iv_mark"
          android:text="健康护理师"
          />
  </LinearLayout>

