<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/top"
        layout="@layout/include_login"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:layout_below="@id/top"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
        <RelativeLayout
            android:id="@+id/ll_content1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/w30"
            android:background="@color/color_bule"
            >
            <com.szxyyd.mpxyhl.view.RoundImageView
                android:id="@+id/image_theach"
                android:layout_width="@dimen/w150"
                android:layout_height="@dimen/h150"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/image_theach"
                android:layout_marginLeft="@dimen/w20">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/thirty" />

                <TextView
                    android:id="@+id/tv_health"
                    style="@style/details_text"
                    android:layout_marginLeft="@dimen/w20"
                    android:layout_toRightOf="@id/tv_name"
                    />
                <LinearLayout
                    android:id="@+id/ll_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/w30"
                    android:layout_toRightOf="@id/tv_health"
                    android:orientation="horizontal">
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_citys"
                    style="@style/details_text"
                    android:layout_below="@id/tv_health"
                    android:layout_marginTop="@dimen/h25"
                    />
                <TextView
                    android:id="@+id/tv_age"
                    style="@style/details_text"
                    android:layout_marginLeft="@dimen/w30"
                    android:layout_marginTop="@dimen/h25"
                    android:layout_below="@id/tv_name"
                    android:layout_toRightOf="@id/tv_citys"
                    />

                <TextView
                    android:id="@+id/tv_experience"
                    style="@style/details_text"
                    android:layout_marginLeft="@dimen/w30"
                    android:layout_below="@id/tv_name"
                    android:layout_toRightOf="@id/tv_age"
                    android:layout_marginTop="@dimen/h25"
                    />

                <LinearLayout
                    android:id="@+id/ll_certificate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/h25"
                    android:layout_below="@id/tv_citys"
                    android:orientation="horizontal">
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>
            <LinearLayout
                style="@style/layout_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/w32"
                    android:text="个人资料"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/h30"
                    android:paddingRight="@dimen/w100"
                    >
                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/twenty_six"
                        android:text="籍贯："
                        />
                    <TextView
                        android:id="@+id/tv_detail_city"
                        style="@style/details_content"
                        android:layout_toRightOf="@id/text1"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/twenty_six"
                            android:text="年龄："
                            />

                        <TextView
                            android:id="@+id/tv_detail_age"
                            style="@style/details_content"
                            android:text="19岁"/>
                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/h40"

                    >
                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/twenty_six"
                        android:text="民族："
                        />

                    <TextView
                        android:id="@+id/tv_detail_nation"
                        style="@style/details_content"
                        android:layout_toRightOf="@id/text3"
                        android:text="汉族"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="@dimen/w100"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/text4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/twenty_six"
                            android:text="婚姻："
                            />
                        <TextView
                            android:id="@+id/tv_detail_marriage"
                            style="@style/details_content"
                            android:text="未婚"/>
                    </LinearLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/h40"
                    android:paddingRight="@dimen/w100"
                    >
                    <TextView
                        android:id="@+id/text5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/twenty_six"
                        android:text="类型："
                        />
                    <TextView
                        android:id="@+id/tv_detail_type"
                        style="@style/details_content"
                        android:layout_toRightOf="@id/text5"
                        android:text="健康管理师"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/twenty_six"
                            android:text="等级："
                            />
                        <TextView
                            android:id="@+id/tv_detail_grade"
                            style="@style/details_content"
                            android:text="一级"/>

                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

        <LinearLayout
            style="@style/layout_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/thirty"
                android:text="服务内容介绍"/>
            <TextView
                android:id="@+id/tv_sercontent"
                style="@style/details_content"
                android:layout_marginTop="@dimen/w20"
                android:lineSpacingExtra="10sp"
                android:text=" 本人性格内外结合,适应能力强，为人诚实，有良好的人际交往能力，具备相关的专业知识和认真。细心、耐心的工作态度及良好的职业道德修养。相信团体精神的我对工作认真负责，总希望能把事情做得更好! 性格开朗，对文字语言和数字敏感，对生活充满希望，对工作充满热情!
         能在短期间内适应新环境，有强烈的品质意识。"/>
        </LinearLayout>

        <LinearLayout
            style="@style/layout_content"
            >
            <TextView
                android:id="@+id/tv_live"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/thirty"
                android:text="个人形象"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    ></LinearLayout>

            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            style="@style/layout_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/thirty"
                android:text="培训经历"/>
            <LinearLayout
                android:id="@+id/ll_train"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/w30"
                android:orientation="vertical"
                >
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            style="@style/layout_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/thirty"
                android:text="视频介绍"/>
            <LinearLayout
                android:id="@+id/ll_video"
                android:layout_width="@dimen/w650"
                android:layout_height="@dimen/h366"
                android:layout_marginTop="@dimen/h30"
                android:layout_gravity="center"
                android:orientation="horizontal">

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/layout_content"
            >
            <RelativeLayout
                android:id="@+id/ll_evaMore"
                android:layout_width="match_parent"
                android:layout_height="@dimen/h90"
                android:orientation="vertical"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/thirty"
                android:text="客户评价"/>
                <TextView
                    android:id="@+id/tv_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/thirty"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    android:text="更多评价" />
            <View
                android:layout_alignParentBottom="true"
                style="@style/view_line"
                />
            </RelativeLayout>
            <ListView
                android:id="@+id/lv_evaluate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/h300">
            </ListView>
        </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h90"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/h60"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_collect"
            android:layout_width="@dimen/w46"
            android:layout_height="@dimen/h47"
            android:layout_marginLeft="@dimen/w30"
            android:layout_centerVertical="true"
            android:background="@mipmap/iv_collectnot"/>
        <Button
            android:id="@+id/btn_order"
            style="@style/btn_sure"
            android:layout_alignParentRight="true"
            android:text="@string/nurse_btn_order"/>
    </RelativeLayout>
</RelativeLayout>
