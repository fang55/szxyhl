<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:paddingBottom="@dimen/h50"
    android:orientation="vertical">

    <include
        android:id="@+id/top"
        layout="@layout/include_top"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        android:orientation="vertical">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/h143"
       android:background="@color/color_white"
       android:paddingLeft="@dimen/w30"
       android:gravity="center"
       android:orientation="vertical">
       <include
           layout="@layout/view_addr"></include>
   </LinearLayout>

    <TextView
        android:id="@+id/tv_order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单编号：12348720160608"
        android:textSize="@dimen/twenty_six"
        android:textColor="@color/color_six_a"
        android:layout_marginTop="@dimen/h25"
        android:layout_marginLeft="@dimen/w30"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/w30"
        android:layout_marginTop="@dimen/h24"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_combo"
                style="@style/text_sixeight"
                android:text="宝宝洗护师A套餐服务"/>
            <TextView
                android:id="@+id/tv_states"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/twenty_six"
                android:textColor="@color/color_bule"
                android:layout_alignParentRight="true"
                android:text="状态"/>
        </RelativeLayout>
        <View
          style="@style/view_line"
            android:layout_marginTop="@dimen/h30"
            ></View>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/h30">
            <ImageView
                android:id="@+id/iv_theach"
                android:layout_width="@dimen/w180"
                android:layout_height="@dimen/h180"
                />
            <TextView
                android:id="@+id/tv1"
                style="@style/text_sixthree_four"
                android:layout_marginLeft="30dp"
                android:text="预约护理师："
                android:layout_toRightOf="@id/iv_theach"
                />
            <TextView
                android:id="@+id/tv_name"
                style="@style/gv_text_four"
                android:layout_marginLeft="@dimen/w20"
                android:text="姓名"
                android:layout_toRightOf="@id/tv1"
                />

            <TextView
                android:id="@+id/tv2"
                style="@style/text_sixthree_four"
                android:layout_marginLeft="@dimen/w30"
                android:layout_marginTop="@dimen/h30"
                android:text="下单日期："
                android:layout_toRightOf="@id/iv_theach"
                android:layout_below="@id/tv_name"
                />
            <TextView
                android:id="@+id/tv_startdate"
                style="@style/gv_text_four"
                android:layout_marginLeft="@dimen/w20"
                android:text="2016-5-13 12:00"
                android:layout_below="@id/tv_name"
                android:layout_marginTop="@dimen/h30"
                android:layout_toRightOf="@id/tv2"
                />

            <TextView
                android:id="@+id/tv3"
                style="@style/text_sixthree_four"
                android:layout_marginLeft="@dimen/w30"
                android:layout_marginTop="@dimen/h30"
                android:text="服务日期："
                android:layout_toRightOf="@id/iv_theach"
                android:layout_below="@id/tv2"
                />

            <TextView
                android:id="@+id/tv_servicedate"
                style="@style/gv_text_four"
                android:layout_marginLeft="@dimen/w20"
                android:text="2016-5-13 12:00"
                android:layout_below="@id/tv2"
                android:layout_marginTop="@dimen/h30"
                android:layout_toRightOf="@id/tv3"
                />
        </RelativeLayout>
        <View
            style="@style/view_line"
            android:layout_marginTop="@dimen/h30"
            ></View>
        <LinearLayout
            style="@style/set_ll"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/twenty_eight"
                android:textColor="@color/order_tv"
                android:text="备注信息："
                />
            <TextView
                android:id="@+id/tv_mas"
                style="@style/text_night"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <View
            style="@style/view_line"
            android:layout_marginTop="@dimen/h30"
            ></View>
        <LinearLayout
            style="@style/set_ll"
            android:layout_marginTop="@dimen/h30"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/twenty_six"
                android:text="服务总费用："/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/thirty_two"
                android:textColor="@color/color_red"
                android:text="¥"/>
            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/thirty_two"
                android:textColor="@color/color_red"
                android:text="0.00"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h75"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
<Button
    android:id="@+id/btn_cancle"
    android:layout_width="@dimen/w320"
    android:layout_height="@dimen/h80"
    android:background="@drawable/order_cancle_bg"
    android:textColor="@color/color_six_six"
    android:textSize="@dimen/thirty_two"
    android:text="取消订单"
    />
        <Button
            android:id="@+id/btn_go"
            android:layout_width="@dimen/w320"
            android:layout_height="@dimen/h80"
            android:background="@drawable/btn_blue_bg"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_white"
            android:textSize="@dimen/thirty_two"
            android:layout_marginLeft="@dimen/w20"
            android:text="去付款"
            />
    </RelativeLayout>
</RelativeLayout>
