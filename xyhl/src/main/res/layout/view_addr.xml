<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_location"
    android:layout_marginTop="@dimen/h20">

    <LinearLayout
        android:id="@+id/ll_notaddr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/iv_location"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w20"
            android:text="您还没有添加服务地址，"
            android:textColor="@color/login_top"
            android:textSize="@dimen/tv_twenty_eight"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w20"
            android:text="点击添加"
            android:textColor="@color/tv_login"
            android:textSize="@dimen/tv_twenty_eight"/>

    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:id="@+id/rl_addr">
    <ImageView
        android:id="@+id/iv_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/iv_people"/>

    <TextView
        android:id="@+id/tv_addr_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tv_twenty_eight"
        android:layout_toRightOf="@id/iv_people"
        android:layout_marginLeft="@dimen/w20"
        android:textColor="@color/login_top"
        android:text="@string/text_name"/>

    <ImageView
        android:id="@+id/iv_haoma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_toRightOf="@id/tv_addr_name"
        android:background="@drawable/iv_haoma"/>

    <TextView
        android:id="@+id/tv_addr_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tv_twenty_eight"
        android:textColor="@color/login_top"
        android:layout_toRightOf="@id/iv_haoma"
        android:layout_marginLeft="20dp"
        android:text="@string/et_phone"/>

    <ImageView
        android:id="@+id/iv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/iv_people"
        android:background="@drawable/iv_location"/>

    <TextView
        android:id="@+id/tv_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/et_text"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/iv_people"
        android:layout_toRightOf="@id/iv_location"
        android:textColor="@color/line"
        android:text="@string/text_addr"
        />
    <ImageView
        android:id="@+id/iv_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/next"/>
</RelativeLayout>
</RelativeLayout>
