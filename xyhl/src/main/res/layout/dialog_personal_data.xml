<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/set_dialog_bg"
    android:orientation="vertical" >

    <include layout="@layout/include_login" />

    <RelativeLayout
        android:id="@+id/rl_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h20"
        android:background="@color/white"
        android:paddingLeft="@dimen/w30" >

        <TextView
            android:id="@+id/tv_set_data"
            style="@style/set_text"
            android:text="头像" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/iv_photo" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/w20"
                android:layout_marginRight="@dimen/w30"
                android:background="@drawable/next" />
        </LinearLayout>
    </RelativeLayout>

    <View
        style="@style/view_line" />

    <RelativeLayout
        android:id="@+id/rl_set_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h20"
        android:background="@color/white"
        android:paddingLeft="@dimen/w30" >

        <TextView
            style="@style/set_text"
            android:text="昵称" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_pepleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/next" />
        </LinearLayout>
    </RelativeLayout>

    <View
        style="@style/view_line"/>

    <RelativeLayout
        android:id="@+id/rl_set_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h20"
        android:background="@color/white"
        android:paddingLeft="@dimen/w30" >

        <TextView
            style="@style/set_text"
            android:text="性别" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w20"
            android:layout_marginRight="@dimen/w30"
            android:background="@drawable/next" />
    </RelativeLayout>

</LinearLayout>