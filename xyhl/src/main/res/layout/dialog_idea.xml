<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/set_dialog_bg"
    android:orientation="vertical" >
    <include 
        layout="@layout/dialog_prople_top"/>
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="@dimen/h100"
         android:layout_marginTop="@dimen/h30"
         android:paddingLeft="@dimen/w30"
         android:background="@drawable/shape_border">
         <EditText 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:hint="@string/et_phone"
             android:textSize="@dimen/tv_text"
             android:layout_gravity="center"
             android:background="@null"/>
     </LinearLayout>
    
    <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="@dimen/h100"
         android:layout_marginTop="@dimen/h30"
         android:paddingLeft="@dimen/w30"
         android:background="@drawable/shape_border">
         <EditText
             android:id="@+id/et_question"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:hint="问题描述"
             android:textSize="@dimen/tv_text"
             android:layout_gravity="center"
             android:background="@null"/>
     </LinearLayout>
    
</LinearLayout>
