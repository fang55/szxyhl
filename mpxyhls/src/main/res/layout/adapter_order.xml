<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/h15"
    android:background="@color/color_white"
    android:paddingLeft="@dimen/w30"
    android:paddingRight="@dimen/w30"
    android:orientation="vertical">
 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="@dimen/h80"
     >
     <TextView
         android:id="@+id/tv_orderId"
         style="@style/text_sixthree_four"
         android:layout_centerVertical="true"
         android:text="1223445545"
         />
     <TextView
         android:id="@+id/tv_orderState"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@color/color_bule"
         android:textSize="@dimen/twenty_four"
         android:layout_alignParentRight="true"
         android:layout_centerVertical="true"
         android:text="未服务"
         />
 </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h20"
        android:paddingLeft="@dimen/w20"
        >
        <TextView
            android:id="@+id/tv_lx"
            style="@style/text_six_four"
            android:text="联系人："
            />
        <TextView
            android:id="@+id/tv_orderName"
            style="@style/text_sixthree_four"
            android:layout_toRightOf="@id/tv_lx"
            android:text="哈哈"
            />
        <TextView
            android:id="@+id/tv_dz"
            style="@style/text_six_four"
            android:layout_below="@id/tv_lx"
            android:layout_marginTop="@dimen/h15"
            android:text="服务地址："
            />
        <TextView
            android:id="@+id/tv_orderAddr"
            style="@style/text_sixthree_four"
            android:layout_toRightOf="@id/tv_dz"
            android:layout_below="@id/tv_lx"
            android:layout_marginTop="@dimen/h15"
            android:text="哈哈"
            />
        <ImageView
           style="@style/iv_next"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h80"
        >
        <TextView
            android:id="@+id/tv_time"
            style="@style/text_six_four"
            android:layout_centerVertical="true"
            android:text="服务时间："
            />
        <TextView
            android:id="@+id/tv_orderTime"
            style="@style/text_sixthree_four"
            android:layout_toRightOf="@id/tv_time"
            android:layout_centerVertical="true"
            android:text="哈哈"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/h1"
            android:layout_alignParentBottom="true"
            style="@style/view_line"></View>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h15"
        android:layout_gravity="right"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="@dimen/w110"
            android:layout_height="@dimen/h50"
            style="@style/text_sixthree_six"
            android:background="@drawable/shape_gray"
            android:gravity="center"
            android:text="拒绝"
            />
        <TextView
            android:id="@+id/tv_go"
            android:layout_width="@dimen/w110"
            android:layout_height="@dimen/h50"
            android:textSize="@dimen/twenty_six"
            android:textColor="@color/color_bule"
            android:background="@drawable/shape_blue"
            android:layout_marginLeft="@dimen/w30"
            android:gravity="center"
            android:text="接受"
            />
    </LinearLayout>
</LinearLayout>
