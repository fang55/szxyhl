<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/w520"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:paddingBottom="@dimen/h30"
    android:paddingLeft="@dimen/w30"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/thirty"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/h30"
        android:text="标题"
        android:textColor="@color/color_black"/>
    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/thirty"
        android:textColor="@color/color_black"
        android:layout_marginTop="@dimen/h30"
        android:hint="请输入"
        android:background="@null"
        />
    <Button
        android:id="@+id/btn_sure"
        android:layout_width="@dimen/h200"
        android:layout_height="@dimen/h50"
        android:layout_marginTop="@dimen/h40"
        android:textColor="@color/color_white"
        android:background="@drawable/btn_blue_bg"
        android:textSize="@dimen/twenty_six"
        android:text="@string/btn_save"
        android:layout_gravity="center"
        />
</LinearLayout>
