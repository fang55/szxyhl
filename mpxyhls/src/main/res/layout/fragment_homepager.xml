<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h400">
        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:id="@+id/dotLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/h20"
            android:orientation="horizontal"
            >
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_view_line"
        android:orientation="vertical">
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_margin="@dimen/w10"
     android:orientation="horizontal">
     <RelativeLayout
         android:id="@+id/rl_orderNew"
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="@dimen/h200"
         android:background="@color/color_white"
         android:orientation="horizontal"
         >
         <ImageView
             android:id="@+id/iv_msg"
             android:layout_width="@dimen/w144"
             android:layout_height="@dimen/h144"
             android:layout_marginLeft="@dimen/w20"
             android:background="@mipmap/home_msg"
             android:layout_centerVertical="true"
             />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="@dimen/w30"
             android:layout_marginLeft="@dimen/w20"
             android:layout_toRightOf="@id/iv_msg"
             android:layout_centerVertical="true"
             android:text="新订单"/>
     </RelativeLayout>

     <LinearLayout
         android:id="@+id/ll_orderCurrent"
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="@dimen/h200"
         android:layout_marginLeft="@dimen/w10"
         android:background="@color/color_white"
         android:gravity="center"
         android:orientation="horizontal">

         <ImageView
             android:layout_width="@dimen/w144"
             android:layout_height="@dimen/h144"
             android:background="@mipmap/home_order"
             android:layout_marginLeft="@dimen/w10"
             />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="@dimen/w30"
             android:layout_marginLeft="@dimen/w20"
             android:layout_toRightOf="@id/iv_msg"
             android:text="当前订单"/>
     </LinearLayout>

 </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/w10"
        android:layout_marginRight="@dimen/w10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/h200"
            android:background="@color/color_white"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/w144"
                android:layout_height="@dimen/h144"
                android:background="@mipmap/home_new"
                android:layout_marginLeft="@dimen/w10"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/w30"
                android:layout_marginLeft="@dimen/w20"
                android:layout_toRightOf="@id/iv_msg"
                android:text="最新福利"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/h200"
            android:layout_marginLeft="@dimen/w10"
            android:background="@color/color_white"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/w144"
                android:layout_height="@dimen/h144"
                android:background="@mipmap/home_money"
                android:layout_marginLeft="@dimen/w10"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/w30"
                android:layout_marginLeft="@dimen/w20"
                android:layout_toRightOf="@id/iv_msg"
                android:text="我的钱包"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/w10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/h200"
            android:background="@color/color_white"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/w144"
                android:layout_height="@dimen/h144"
                android:background="@mipmap/home_file"
                android:layout_marginLeft="@dimen/w10"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/w30"
                android:layout_marginLeft="@dimen/w20"
                android:layout_toRightOf="@id/iv_msg"
                android:text="我的档案"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/h200"
            android:layout_marginLeft="@dimen/w10"
            android:background="@color/color_white"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/w144"
                android:layout_height="@dimen/h144"
                android:background="@mipmap/home_question"
                android:layout_marginLeft="@dimen/w10"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/w30"
                android:layout_marginLeft="@dimen/w20"
                android:layout_toRightOf="@id/iv_msg"
                android:text="有问必答"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
